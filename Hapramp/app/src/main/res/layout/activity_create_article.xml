<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.hapramp.activity.NewPostCreationActivity">

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/toolbar_container"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent">

        <TextView
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:id="@+id/closeBtn"
            android:layout_height="?actionBarSize"
            android:layout_width="?actionBarSize"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:text="ARTICLE"
            android:textSize="18sp" />

        <TextView
            android:background="@drawable/light_btn_bg"
            android:gravity="center"
            android:id="@+id/nextButton"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:paddingBottom="4dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:text="PUBLISH"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/skills_wrapper"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/toolbar_container">

        <TextView
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/skillsTagView"
            android:layout_toStartOf="@+id/addSkillBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/addSkillBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:background="@drawable/light_btn_bg"
            android:padding="8dp"
            android:text="+ Add Skills"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/skills_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/postMediaContainer"
                android:layout_below="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/postMedia"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:background="#3c819b"
                    android:scaleType="centerCrop" />

                <TextView
                    android:textSize="36sp"
                    android:textColor="#ffffff"
                    android:id="@+id/removeImageBtn"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <ProgressBar
                    android:id="@+id/postMediaUploadProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/post_editor_bg"
                android:gravity="top"
                android:textColor="@color/Black87"
                android:hint="Write your article..."
                android:padding="16dp"
                android:textSize="18sp" />

            <TextView
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:text="0"
                android:id="@+id/characterLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/bottom_options_container"
        android:layout_alignParentBottom="true"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent">


        <TextView
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:id="@+id/textSizeBtn"
            android:layout_height="?actionBarSize"
            android:layout_width="?actionBarSize"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:id="@+id/quoteBtn"
            android:layout_height="?actionBarSize"
            android:layout_toEndOf="@+id/textSizeBtn"
            android:layout_width="?actionBarSize"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:id="@+id/bulletBtn"
            android:layout_height="?actionBarSize"
            android:layout_toEndOf="@id/quoteBtn"
            android:layout_width="?actionBarSize"
            android:text=""
            android:textSize="24sp" />


        <TextView
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:id="@+id/linkBtn"
            android:layout_height="?actionBarSize"
            android:layout_toEndOf="@id/bulletBtn"
            android:layout_width="?actionBarSize"
            android:text=""
            android:textSize="24sp" />

    </RelativeLayout>

</RelativeLayout>