<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.hapramp.activity.OrganisationActivity">

    <TextView
        android:id="@+id/backBtn"
        android:text=""
        android:gravity="center"
        android:textSize="24sp"
        android:layout_width="48dp"
        android:layout_height="?actionBarSize" />

    <TextView
        android:id="@+id/actionbar_title"
        android:padding="8dp"
        android:textColor="@color/lightGrey"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="CHOOSE YOUR ORGANISATION"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize" />

    <FrameLayout
        android:id="@+id/toolbar_drop_shadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/actionbar_title"
        android:background="@drawable/toolbar_shadow" />

    <TextView
        android:layout_below="@+id/actionbar_title"
        android:background="@drawable/org_icon_bg"
        android:id="@+id/organisation_people_icon"
        android:layout_width="108dp"
        android:layout_margin="48dp"
        android:gravity="center"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="72sp" />

    <TextView
        android:textSize="18sp"
        android:textColor="@color/darkGrey"
        android:layout_marginLeft="24dp"
        android:layout_above="@+id/orgs"
        android:text="All Organisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_above="@+id/organisation_continueBtn"
        android:layout_below="@+id/organisation_people_icon"
        android:id="@+id/orgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/organisation_continueBtn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/skills_continue_btn_bg"
        android:textColor="@color/colorAccent"
        android:text="CONTINUE"
        android:layout_margin="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:textSize="16sp"
        android:elevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
