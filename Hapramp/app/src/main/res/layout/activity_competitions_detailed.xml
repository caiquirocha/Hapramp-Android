<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.hapramp.activity.CompetitionsDetailedActivity">

        <RelativeLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginBottom="4dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/closeBtn"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textSize="24sp" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/feed_owner_pic"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/closeBtn"
                android:padding="8dp"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/feed_owner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/feed_owner_pic"
                android:text="Ankit Kumar"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed_owner_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feed_owner_title"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/feed_owner_pic"
                android:text="iiit | 2 days ago" />

            <TextView
                android:id="@+id/overflowBtn"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/competitionContentHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_container"
            android:layout_marginTop="4dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_container"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:text="#hapramp #dance #colors"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/competitionDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tags"
                android:layout_marginStart="16dp"
                android:maxLines="4"
                android:padding="4dp"
                android:text="@string/lorem"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/entry_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/competitionDetails"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/entry_fee_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:text=""
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/entry_fee_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Entry Fee:" />

                <TextView
                    android:id="@+id/entry_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="20 Hapcoins"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/prize_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry_info_container"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/prize_money_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:text=""
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/prize_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="Prize Money:" />

                <TextView
                    android:id="@+id/prize_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="500 Hapcoins"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/participantsCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prize_info_container"
                android:padding="16dp"
                android:text="Participants"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/participantsRv"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/participantsCaption" />

            <TextView
                android:id="@+id/submit_entries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/participantsRv"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:background="@drawable/filled_btn_bg"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="SUBMIT ENTRIES"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <TextView
            android:id="@+id/submitted_post_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/competitionContentHolder"
            android:padding="16dp"
            android:text="SUBMITTED POST"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/submitted_posts_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/submitted_post_caption" />

    </RelativeLayout>

</ScrollView>
