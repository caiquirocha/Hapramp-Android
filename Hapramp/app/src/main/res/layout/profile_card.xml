<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/profile_header_container"
        android:layout_width="match_parent"
        android:layout_height="196dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/profile_wall"
            android:layout_width="match_parent"
            android:layout_height="196dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile_pic"
            fresco:actualImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/profile_user_dp_circle"
            android:layout_width="96dp"
            android:layout_height="96dp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/profile_header_container"
        android:id="@+id/profile_user_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/username"
            android:textColor="#000000"
            android:text="Sancheeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:layout_toRightOf="@+id/username"
            android:id="@+id/hapname"
            android:text="\@hapramp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:clickable="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_user_name_container"
        android:id="@+id/follow_btn"
        android:background="@drawable/follow_btn_bg"
        android:textColor="#ffffff"
        android:text="Follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/follow_btn"
        android:id="@+id/post_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:padding="8dp"
            android:id="@+id/post_counts"
            android:textColor="#000000"
            android:text="21 Posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/post_counts"
            android:id="@+id/followers_count"
            android:text="111 Followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/followers_count"
            android:id="@+id/followings_count"
            android:text="81 Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/divider"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/post_stats"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/badge_containers"
        android:paddingBottom="24sp"
        android:paddingRight="22dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/divider"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <TextView
                android:layout_margin="22dp"
                android:background="@drawable/hapcoins_text_badge"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="#71690C"
                android:text="H"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_gravity="center_vertical|end"
                android:gravity="center"
                android:background="@drawable/hapcoins_count_badge"
                android:text="+211"
                android:textSize="12sp"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <TextView
                android:textColor="#333333"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="Hapcoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <TextView
                android:layout_margin="22dp"
                android:background="@drawable/hapgems_text_badge"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="G"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_gravity="center_vertical|end"
                android:gravity="center"
                android:background="@drawable/hapgems_count_badge"
                android:text="+21"
                android:textSize="12sp"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <TextView
                android:textColor="#333333"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="Gems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <TextView
                android:layout_margin="22dp"
                android:background="@drawable/haptrofies_text_badge"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="T"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_gravity="center_vertical|end"
                android:gravity="center"
                android:background="@drawable/haptrofies_count_badges"
                android:text="+7"
                android:textSize="12sp"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <TextView
                android:textColor="#333333"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="Trophies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>


    </LinearLayout>

    <TextView
        android:textColor="#6c6c6c"
        android:textSize="16sp"
        android:background="#f8f8f8"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/badge_containers"
        android:id="@+id/recentPostsCaption"
        android:text="RECENT POSTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>