<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="@dimen/chat_list_padding"
    android:layout_height="@dimen/chat_list_height">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/chat_list_avatar"
        fresco:roundAsCircle="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImage="@drawable/unread_count_backgroud"
        android:layout_width="@dimen/chat_list_avatar_width"
        android:layout_height="@dimen/chat_list_avatar_width"
        />
    
    <TextView
        android:id="@+id/chat_list_title"
        android:textColor="#262626"
        android:textStyle="bold"
        android:textSize="@dimen/chat_list_title_size"
        android:layout_toEndOf="@+id/chat_list_avatar"
        android:layout_margin="@dimen/chat_list_title_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/unread_count"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/chat_list_unread_count_dimen"
        android:layout_height="@dimen/chat_list_unread_count_dimen" />
    
    <TextView
        android:textColor="#454545"
        android:layout_marginStart="@dimen/chat_list_message_margin"
        android:layout_marginEnd="@dimen/chat_list_message_margin"
        android:layout_toEndOf="@+id/chat_list_avatar"
        android:layout_below="@+id/chat_list_title"
        android:id="@+id/chat_list_last_message"
        android:layout_width="match_parent"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="24sp"
        android:maxLines="1"
        android:text="ï‰¯"
        android:textColor="#9e9e9e"
        android:layout_margin="@dimen/chat_list_title_margin"
        android:layout_toEndOf="@+id/chat_list_avatar"
        android:id="@+id/online_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="#bebfbd"
        android:layout_height="1dp"/>

</RelativeLayout>