<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/user_pic"
        android:padding="2dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:textColor="@color/Black87"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:id="@+id/content"
        android:text="Ankit Kumar"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/user_pic"
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/followUnfollowBtn"
        android:layout_height="56dp" />

    <TextView
        android:textColor="@color/follow_unfollow_btn_textccolor"
        android:background="@drawable/follow_btn_bg"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Follow"
        android:id="@+id/followUnfollowBtn"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/followUnfollowProgress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>