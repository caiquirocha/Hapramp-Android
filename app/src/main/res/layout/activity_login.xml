<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/connectivityText"
            android:padding="2dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_margin="36dp"
            android:src="@drawable/logo_new_app" />

        <LinearLayout
            android:id="@+id/usernameHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="24sp"
            android:layout_marginStart="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/Black38"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/usernameTv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:hint="Username"
                android:textSize="14sp"
                android:lines="1"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/privateKeyHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/Black38"
                android:textSize="24sp" />

            <EditText
                android:layout_toEndOf="@+id/lock_icon"
                android:id="@+id/private_posting_key"
                android:layout_toStartOf="@+id/scanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:lines="1"
                android:inputType="textPassword"
                android:hint="Posting Key"/>

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/scanBtn"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=""
                android:paddingStart="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:paddingStart="96dp"
            android:paddingEnd="96dp"
            android:background="@drawable/filled_btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="SIGN IN"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/Black12"
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/createSteemAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:background="@drawable/light_btn_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="CREATE STEEM ACCOUNT"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:text="Help ?"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/helpBtn"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>