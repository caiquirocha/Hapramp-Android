<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HapSkillSelectionDialogFragment">

    <TextView
        android:padding="16dp"
        android:textSize="18sp"
        android:id="@+id/hapskill_caption"
        android:text="Select HapSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:layout_centerHorizontal="true"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="16dp"
        android:numColumns="3"
        android:columnWidth="96dp"
        android:layout_below="@+id/hapskill_caption"
        android:id="@+id/skillsGridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/hapskills_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
